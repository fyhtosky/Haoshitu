<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle"/>
        <ImageView
            android:layout_below="@+id/iv_dot"
            android:layout_width="1dp"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent"
            android:src="@color/divider"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/rl_left"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_education_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="2017-07-2020-07"/>
    <TextView
        android:layout_below="@+id/tv_education_time"
        android:id="@+id/tv_education_school"
        android:layout_toLeftOf="@+id/tv_education_marjor"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="武汉大学"/>
    <TextView
        android:layout_below="@+id/tv_education_time"
        android:id="@+id/tv_education_marjor"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="计算机系"/>
    </RelativeLayout>
</RelativeLayout>
