<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sj.yinjiaoyun.shituwang.activity.ChangePwdActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/main_color">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/white_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </RelativeLayout>
  <RelativeLayout
      android:layout_below="@+id/rl_title"
      android:layout_width="match_parent"
      android:background="@color/white"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_height="wrap_content">
      <!--旧密码-->
      <RelativeLayout
          android:id="@+id/rl_old_pwd"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:gravity="center"
          android:padding="5dp">

          <TextView
              android:id="@+id/tv_old_pwd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="旧密码"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:alpha="0.9"
              android:gravity="center"
              android:layout_marginLeft="15dp" />

          <EditText
              android:id="@+id/et_old_pwd"
              android:inputType="textPassword"
              android:textSize="16sp"
              android:gravity="center|left"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignBottom="@id/tv_old_pwd"
              android:layout_alignTop="@id/tv_old_pwd"
              android:layout_toRightOf="@id/tv_old_pwd"
              android:background="@null"
              android:hint="请输入旧密码"
              android:layout_marginLeft="25dp" />


      </RelativeLayout>
      <ImageView
          android:layout_below="@+id/rl_old_pwd"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@color/circle" />
      <!--密码-->
      <RelativeLayout
          android:layout_below="@+id/rl_old_pwd"
          android:id="@+id/rl_new_pwd"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:gravity="center"
          android:padding="5dp">
          <TextView
              android:id="@+id/tv_new_pwd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:textColor="@color/black"
              android:layout_centerVertical="true"
              android:alpha="0.9"
              android:textSize="16sp"
              android:text="新密码"/>
          <EditText
              android:id="@+id/et_new_pwd"
              android:inputType="textPassword"
              android:textSize="16sp"
              android:gravity="center|left"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignBottom="@id/tv_new_pwd"
              android:layout_alignTop="@id/tv_new_pwd"
              android:layout_toRightOf="@id/tv_new_pwd"
              android:background="@null"
              android:hint="请输入新密码"
              android:layout_marginLeft="25dp"/>

      </RelativeLayout>

      <ImageView
          android:layout_below="@+id/rl_new_pwd"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@color/circle" />
      <RelativeLayout
          android:layout_below="@+id/rl_new_pwd"
          android:id="@+id/rl_confirm_pwd"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:gravity="center"
          android:padding="5dp">
          <TextView
              android:id="@+id/tv_confirm_pwd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:textColor="@color/black"
              android:layout_centerVertical="true"
              android:alpha="0.9"
              android:textSize="16sp"
              android:text="确认密码"/>
          <EditText
              android:id="@+id/et_confirm_pwd"
              android:inputType="textPassword"
              android:textSize="16sp"
              android:gravity="center|left"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignBottom="@id/tv_confirm_pwd"
              android:layout_alignTop="@id/tv_confirm_pwd"
              android:layout_toRightOf="@id/tv_confirm_pwd"
              android:background="@null"
              android:hint="请输入新密码"
              android:layout_marginLeft="15dp" />

      </RelativeLayout>
  </RelativeLayout>
    <Button
        android:id="@+id/bt_confirm_change"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认修改"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:background="@drawable/btn_start"/>
</RelativeLayout>
